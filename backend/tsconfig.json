{
  "compilerOptions": {
    "target": "ES2020",  // Set the target to ES2020 for modern JS features
    "module": "CommonJS", // Use CommonJS for Node.js
    "moduleResolution": "Node", // Resolve modules like Node.js
    "esModuleInterop": true, // Enable compatibility for non-ESM packages
    "strict": true,  // Enable strict type-checking options
    "skipLibCheck": true, // Skip checking library files to reduce compilation time
    "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
    "outDir": "./dist", // Output directory for compiled files
    "baseUrl": "./", // Base directory for relative imports
    "resolveJsonModule": true, // Allow importing JSON modules
    "lib": ["ES2020"],  // Include ES2020 standard library
    "sourceMap": true,  // Enable source maps for debugging
    "noImplicitAny": true, // Disallow implicit `any` type
    "strictNullChecks": true, // Enable strict null checks
    "skipDefaultLibCheck": true, // Skip default library check to avoid issues
    "noEmit": false,  // Prevent emitting JavaScript files
    "types": ["node", "express"]  // Explicitly include types for Node.js and Express
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"], 
  "exclude": ["node_modules", "dist"]  // Exclude node_modules and dist directories
}
